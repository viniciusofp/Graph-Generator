				<form>
					<div class="form-group">
						<h5>Função <span style="color: red; font-weight: bolder">*</span></h5>
						<textarea required class="form-control" placeholder='Escreva aqui a função para seu gráfico' ng-model='fun'></textarea>
					</div>
					<button class="btn btn-info pull-right" value="submit" type='submit' ng-click='addGraph()'>Adicionar</button>
					<button class="btn btn-success pull-right" value="submit" type='submit' ng-click='newGraph()'>Atualizar</button>
				</form>	
			</section>
			<div>
				<blockquote>
					xˆ2<br>
					cos(x)<br>
					sin(x)<br>
					tan(x)<br>
					sqrt(1 - x * x)
				</blockquote>
			</div>
		</div>
	</div>

